@page "/"

@inject NavigationManager NavigationManager

<PageTitle>Главная</PageTitle>

<link href="css/style.css" rel="stylesheet">

<div class="menu">
    <div class="welcome-text">
        <p>Chuck-A-Luck</p>
    </div>

    <div class="start-page-buttons">
        <input type="button" class="start_button" @onclick="CreateGame" value="Создать игру">
        <input type="button" class="start_button" @onclick="JoinGame" value="Присоединиться к игре">
    </div>
</div>

@code
{
    private void CreateGame()
    {
        NavigationManager.NavigateTo("/create");
    }

    private void JoinGame()
    {
        NavigationManager.NavigateTo("/join");
    }
}